<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="afw_project.Customer_Products">
            
    <StackLayout Padding="10">
        <ListView x:Name="Products"
                  ItemsSource="{Binding ProductsList}" HasUnevenRows="True"
                  ItemSelected="Products_ItemSelected">
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Text="{Binding Name}"
                                   
                                   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
                            
                            
                            <Label Text="{Binding Price}"
                                   Grid.Row="1" Grid.Column="0"/>
                            
                            <Label Text="{Binding Sale}"
                                   Grid.Row="1" Grid.Column="1"/>
                                
                            <Label Text="{Binding Description}"
                                Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
                            </Grid>
                            <Grid x:Name="expanded" IsVisible="{Binding IsSelected}">
                                <Button Text="Add to Cart" Clicked="AddToCart_Clicked"
                                        Grid.Row="3" Grid.Column="1"/>
                            </Grid>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            
        </ListView>
    </StackLayout>
</ContentPage>
